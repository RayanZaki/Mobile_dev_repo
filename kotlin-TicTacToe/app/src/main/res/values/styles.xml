<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TicTacToeTile">
        <item name="android:background">@drawable/tile_border</item> <!-- The borders -->
        <item name="android:layout_width">100dp</item> <!-- Set width as needed -->
        <item name="android:layout_height">100dp</item> <!-- Set height as needed -->
        <item name="android:gravity">center</item> <!-- Center text within the tile -->
        <item name="android:textSize">24sp</item> <!-- Set the text size -->
        <item name="android:textColor">#000000</item> <!-- Set the text color -->
        <item name="android:padding">8dp</item> <!-- Set padding as needed -->
    </style>

</resources>